<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="5dp"
    android:weightSum="2"
    android:layout_height="100dp">
    <TextView
        android:text="@string/ss_name_bangla"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Spinner
        android:id="@+id/ss_filter_spinner"
        android:layout_marginBottom="20dp"
        android:layout_width="150dp"
        android:background="@drawable/spinner_resource"
        android:layout_margin="5dp"
        android:layout_height="50dp">
    </Spinner>
    <LinearLayout
        android:id="@+id/month_view"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/month_bangla"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/month_filter_spinner"
            android:layout_width="150dp"
            android:background="@drawable/spinner_resource"
            android:layout_height="50dp">
        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/date_view"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/date_bangla"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:drawableRight="@drawable/ic_calender"
            android:background="@drawable/login_button_bg"
            android:id="@+id/date_btn"
            android:paddingRight="15dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingLeft="5dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <ImageView
        android:id="@+id/filterBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_icon_filter"/>


</LinearLayout>