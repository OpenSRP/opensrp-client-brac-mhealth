<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:focusableInTouchMode="true"
    android:focusable="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/customAppThemeBlue">
        <ImageView
            android:id="@+id/backBtn"
            android:src="@drawable/ic_arrow_back_white_24dp"
            android:tint="@color/white"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/textview_detail_two"
            style="@style/CustomFontTextViewStyle.ClientList.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingStart="0dp"
            android:paddingLeft="0dp"
            android:text="@string/menu_forum"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/sort_btn"
            android:src="@drawable/ic_sort"
            android:tint="@color/white"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        android:padding="10dp"
        android:elevation="5dp"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="ফোরামের নাম:"
                android:textSize="25sp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <org.smartregister.view.customcontrols.CustomFontTextView
               android:id="@+id/forum_name"
                android:text="কিশোরী ফোরাম"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        android:padding="10dp"
        android:elevation="5dp"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <TextView
                android:text="স্থান:"
                android:textSize="25sp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/khana_name"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_marginTop="30dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/search_khana"
                android:background="@drawable/round_btn"
               android:padding="10dp"
                android:text="খানা খুঁজি "
                android:drawableRight="@drawable/ic_icon_search"
                android:layout_gravity="right|center_vertical"
                android:gravity="center"
                android:layout_width="150dp"
                android:layout_height="50dp"/>



    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        android:padding="10dp"
        android:elevation="5dp"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="ফোরামে অংশগ্রহণকারী সংখ্যা "
            android:textSize="25sp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
          <EditText
              android:id="@+id/no_of_perticipant"
              android:layout_gravity="bottom"
              android:layout_marginTop="35dp"
              android:layout_marginLeft="10dp"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:minWidth="100dp"
              android:layout_width="wrap_content"
              android:layout_height="50dp"/>



    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        android:padding="10dp"
        android:elevation="5dp"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="ফোরামে অংশগ্রহণকারী যোগ করুন :"
                android:textSize="25sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/add_member_btn"
                android:layout_gravity="right"
                android:text="সদস্য যোগ করুন"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:gravity="right"
                android:background="@drawable/login_button_bg"
                android:layout_width="150dp"
                android:padding="10dp"
                android:layout_height="wrap_content"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:padding="10dp"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>



    </android.support.v7.widget.CardView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="bottom|center_horizontal"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:layout_height="0dp">
        <Button
            android:id="@+id/submit_btn"
            android:text="@string/submit"
            android:background="@drawable/login_button_bg"
            android:textColor="#fff"
            android:layout_width="150dp"
            android:layout_height="50dp"/>
    </LinearLayout>

</LinearLayout>
